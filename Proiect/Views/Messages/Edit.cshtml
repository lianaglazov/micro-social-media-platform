@model Proiect.Models.Message


@{
    ViewBag.Title = "Edit";
}

<h2>Editare mesaj</h2>
<br />


@using (Html.BeginForm(controllerName: "Messages", actionName: "Edit",
     method: FormMethod.Post, routeValues: new { id = Model.Id }))

{
    @Html.Label("Content", "Continut mesaj")

    <br />

    @Html.TextArea("Content", Model.Content, new { @class = "form-control summernote" })
    <br />

    @Html.ValidationMessage("content", null, new { @class = "text-danger" })

    <br />
    <br />

    <button class="button-17" type="submit">Editeaza mesajul</button>

}
