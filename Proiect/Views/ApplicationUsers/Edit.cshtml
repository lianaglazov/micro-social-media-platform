@model Proiect.Models.ApplicationUser

<h2 class="text-center mt-5">Editare profil</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "ApplicationUsers",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))
            {
                /* @Html.HiddenFor(m => m.Id)  */
                @Html.Label("ProfileImage", "Imagine profil")
                <br />
                @Html.TextArea("ProfileImage", Model.ProfileImage, new { @class = "form-control profile-summernote" })
                <br />

                @Html.Label("UserName", "Nume profil")
                <br />
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descriere profil")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                <label>Selectati tipul de profil</label>
                @Html.DropDownListFor(m => m.Privacy,
            new SelectList(Model.PrivOption, "Value", "Text"),
            "Selectati categoria", new { @class = "form-control" })
                
                <br />

                <br />

                <br />


                <button class="btn btn-sm btn-success" type="submit">Modifica profil</button>

            }
        </div>
    </div>
</div>




