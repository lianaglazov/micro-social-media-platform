@model Proiect.Models.Post

<h2 class="text-center mt-5">Editare postare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))
            {
              
                @Html.Label("Content", "Continut Postare")
                <br />
                @Html.TextArea("Content", Model.Content, new { @class = "form-control summernote" } )

                @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-light"type="submit">Editează postarea</button>

            }
        </div>
    </div>
</div>
